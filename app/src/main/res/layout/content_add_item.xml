<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_add_item_layout_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".addedit.AddEditTaskFragment"
    tools:showIn="@layout/fragment_add_edit_task">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_item_hint_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColorHint="@color/grayTextColor"
        app:counterEnabled="true"
        app:hintTextAppearance="@style/EditTextHintAppearance">

        <com.ketchup.addedit.CustomEditText
            android:id="@+id/add_item_edit_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/desc"
            android:inputType="textWebEditText|textMultiLine"
            android:maxLines="5"
            android:scrollbarStyle="insideInset"
            android:textColor="@color/grayTextColor" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- divide line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/lightGray" />

    <include layout="@layout/content_add_item_color_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/lightGray" />


    <include layout="@layout/content_add_item_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/lightGray" />

    <include layout="@layout/content_add_item_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
